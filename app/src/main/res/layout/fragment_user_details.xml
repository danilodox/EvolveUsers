<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome:" />

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username:" />
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexo:" />

    <AutoCompleteTextView
        android:id="@+id/editTxtSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="40dp"
        android:hint=""
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20sp"
        android:textStyle="bold"
        android:inputType="none"
        android:selectAllOnFocus="true"
        android:completionThreshold="1"
        android:popupBackground="@color/white"
        android:entries="@array/sex_options"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data de Nascimento:" />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:paddingStart="10dp"
        android:paddingLeft="20.dp"
        android:text="@string/prompt_dataNascimento"
        android:textSize="@dimen/dimen_16sp"
        android:background="?android:attr/selectableItemBackground" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:calendarViewShown="false"
        android:spinnersShown="true"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:calendarTextColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail:" />
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha:" />
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o:" />
    <EditText
        android:id="@+id/editTextEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto:" />
    <EditText
        android:id="@+id/editTextFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""/>


    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:enabled="false"
        android:paddingStart="10dp"
        android:paddingLeft="20.dp"
        android:text="Atualizar Dados"
        android:textSize="@dimen/dimen_16sp"
        android:background="?android:attr/selectableItemBackground" />

</LinearLayout>

</ScrollView>