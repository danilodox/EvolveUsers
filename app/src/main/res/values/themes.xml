<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/soft_cyan</item>
        <item name="colorPrimaryDark">@color/navy_blue</item>
        <item name="colorAccent">@color/mint_green</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:statusBarColor">@color/navy_blue</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/soft_cyan</item>
        <item name="android:titleTextColor">@android:color/white</item>
    </style>

    <!-- Button styles -->
    <style name="PrimaryButton">
        <item name="android:background">@color/soft_cyan</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@color/soft_yellow</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Text styles -->
    <style name="HeadingText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SimpleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>

    <style name="BodyText">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>